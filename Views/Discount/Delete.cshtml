@using Group14_BevoBooks.Models
@model Group14_BevoBooks.Models.Discount

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Discount</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PromoCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PromoCode)
        </dd>
        <dt>
            Discount Amount
        </dt>
        <dd>
            @if (Model.DiscountType == DiscountType.FreeShipping)
            {
                @Html.DisplayFor(model => model.DiscountAmountShipping)
            }
            @if (Model.DiscountType == DiscountType.PercentOff)
            {
                @Html.DisplayFor(model => model.DiscountAmountPercent)
            }

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DiscountStartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiscountStartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DiscountEndDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiscountEndDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DiscountType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiscountType)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DiscountID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
