@model Group14_BevoBooks.Models.Discount
@using Group14_BevoBooks.Models
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Discount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiscountID" />
            <div class="form-group">
                <label asp-for="PromoCode" class="control-label"></label>
                <input asp-for="PromoCode" class="form-control" />
                <span asp-validation-for="PromoCode" class="text-danger"></span>
            </div>
                @if (Model.DiscountType == DiscountType.FreeShipping)
                {
                    <div class="form-group">
                        <label asp-for="DiscountAmountShipping" class="control-label"></label>
                        <input asp-for="DiscountAmountShipping" class="form-control" />
                        <span asp-validation-for="DiscountAmountShipping" class="text-danger"></span>
                    </div>
                }
                @if (Model.DiscountType == DiscountType.PercentOff)
                {
                    <div class="form-group">
                        <label asp-for="DiscountAmountPercent" class="control-label"></label>
                        <input asp-for="DiscountAmountPercent" class="form-control" />
                        <span asp-validation-for="DiscountAmountPercent" class="text-danger"></span>
                    </div>
                }
            <div class="form-group">
                <label asp-for="DiscountStartDate" class="control-label"></label>
                <input asp-for="DiscountStartDate" class="form-control" />
                <span asp-validation-for="DiscountStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountEndDate" class="control-label"></label>
                <input asp-for="DiscountEndDate" class="form-control" />
                <span asp-validation-for="DiscountEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountType" class="control-label"></label>
                <select asp-for="DiscountType" class="form-control"></select>
                <span asp-validation-for="DiscountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
