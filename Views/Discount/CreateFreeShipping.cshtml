@model Group14_BevoBooks.Models.Discount
@{
    ViewData["Title"] = "Create";
}
<h2>Create</h2>
<h4>Discount - Free Shipping</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDiscountShipping">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div><input type="hidden" asp-for="DiscountID" /></div>
            <div>Free Shipping for Orders Over:</div>
            <div class="form-group">
                <input asp-for="DiscountAmountShipping" class="form-control" placeholder="X.XX" />
                <span asp-validation-for="DiscountAmountShipping" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input">
                <label class="form-check-label" for="freeshipping">Free Shipping For All Orders</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
