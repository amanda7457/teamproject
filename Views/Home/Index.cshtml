@model IEnumerable<Group14_BevoBooks.Models.Discount>
@using Group14_BevoBooks.Models

@{
    ViewData["Title"] = "Index";
}

<h2>Welcome @ViewBag.Name</h2>

@if (User.IsInRole("Customer"))
{
    <h4>Available Discount Codes</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PromoCode)
                </th>
                <th>
                    Discount Amount
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiscountType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PromoCode)
                </td>
                <td>
                @if (item.DiscountType == DiscountType.FreeShipping)
                {
                     @Html.DisplayFor(modelItem => item.DiscountAmountShipping)
                }
                @if (item.DiscountType == DiscountType.PercentOff)
                {
                     @Html.DisplayFor(modelItem => item.DiscountAmountPercent)
                }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountType)
                </td>
            </tr>
            }
        </tbody>
    </table>

}
