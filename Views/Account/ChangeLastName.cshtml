@using Group14_BevoBooks.Models
@model Group14_BevoBooks.Models.ChangeLastName 
<h2>Change Last Name</h2>
@using (Html.BeginForm("ChangeLastName", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change First Name</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NewLastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewLastName, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
    </div>
}