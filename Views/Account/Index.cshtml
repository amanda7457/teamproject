@using Group14_BevoBooks.Models
@model Group14_BevoBooks.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
<h2>@ViewBag.Title.</h2>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>
        <dt>Email:</dt>
        <dd>@Model.Email</dd>
        <dt>Password:</dt>
        <dd>
        @if (Model.HasPassword)
        {
            @Html.ActionLink("Change your password", "ChangePassword")
        }
        </dd>
        
        <dt>Phone Number:</dt>
        <dd>@Model.NewPhoneNumber</dd>
        <dd>@Html.ActionLink("Change your phonenumber", "ChangePhoneNumber")</dd>
        
        <dt>First Name:</dt>
        <dd>@Model.NewFirstName</dd>
        <dd>@Html.ActionLink("Change your first name", "ChangeFirstName")</dd>
       
        <dt>Last Name:</dt>
        <dd>@Model.NewLastName</dd>
        <dd>@Html.ActionLink("Change your last name", "ChangeLastName")</dd>
       
        <dt>Address:</dt>
        <dd>@Model.NewAddress</dd>
        <dd>@Html.ActionLink("Change your Address", "ChangeAddress")</dd>

        <dt>Email:</dt>
        <dd>@Model.NewEmail</dd>
        <dd>@Html.ActionLink("Change your Email", "ChangeEmail")</dd>
        
        </dl>

</div>
<hr />
