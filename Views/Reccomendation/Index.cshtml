@model IEnumerable<Group14_BevoBooks.Models.Book>
@{
    ViewData["Title"] = "Index";
}
<h2>Thanks For Placing Your Order</h2>
<h3>We thought you'd also like:</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a asp-controller="Book" asp-action="Details" asp-route-id="@item.BookID">Add To Order</a>
            </td>
        </tr>
        }
    </tbody>
</table>
