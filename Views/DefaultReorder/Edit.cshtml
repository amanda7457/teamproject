@model Group14_BevoBooks.Models.DefaultReorder

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>DefaultReorder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DefaultReorderID" />
            <div class="form-group">
                <label asp-for="DefaultQuantity" class="control-label"></label>
                <input asp-for="DefaultQuantity" class="form-control" />
                <span asp-validation-for="DefaultQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="BookOrder" a asp-action="AutoReorder">Back To Automatic Reorder</a>
</div>
