@using Group14_BevoBooks.Models
@model IEnumerable<Group14_BevoBooks.Models.AppUser>
@{
    ViewData["Title"] = "Report - All Customers";
}
<h2>All Customers</h2>



<form asp-action="AllCustomers" asp-controller="Report">
    <div class="form-group">
        <label>Sort By:</label>
        @Html.DropDownList("SelectedSort", (SelectList)ViewBag.CustomerSort, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-dark">Sort Results</button>
</form>

<div>
    <p>@ViewBag.ReportCount Results</p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRevenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserProfitMargin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalRevenue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserProfitMargin)
                </td>
            </tr>
        }
    </tbody>
</table>
