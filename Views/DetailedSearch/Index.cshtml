@using Group14_BevoBooks
@using Group14_BevoBooks.Controllers
@{
    ViewBag.Title = "Detailed Search";
}
<h2>Detailed Search</h2>
<form asp-action="SearchResult" asp-controller="DetailedSearch" method="get">
    <div class="form-group">
        <label>Title:</label>
        <input name="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label> Author:</label>
        <input name="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label> Unique ID:</label>
        <input name="BookID" class="form-control" />
    </div>
    <div class="form-group">
        <label>Choose a Genre:</label>
        @Html.DropDownList("SelectedGenre", (SelectList)ViewBag.AllGenres, new { @class = "form-control" })
    </div>
    
    <button type="submit" class="btn btn-danger">Search</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-danger">Show All Books</a>
</form>